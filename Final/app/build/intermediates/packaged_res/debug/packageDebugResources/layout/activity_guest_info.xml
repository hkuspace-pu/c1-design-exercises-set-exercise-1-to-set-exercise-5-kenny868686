<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvGuestInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guest_information"
        android:textColor="@color/secondaryText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.18"/>

    <LinearLayout
        android:id="@+id/layoutFields"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvGuestInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:hint="Name (Required)"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textPersonName"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:hint="Phone (Required)"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="phone"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <EditText
            android:id="@+id/etGuests"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:hint="Guests (Required)"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="number"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:hint="Notes (Optional)"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textCapSentences"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnNextGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="@drawable/bg_button_shadow"
        android:textAllCaps="true"
        android:textColor="@color/primaryText"
        app:layout_constraintTop_toBottomOf="@id/layoutFields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>