<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/row1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.4"/>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@id/dateTitle"
        app:layout_constraintBottom_toTopOf="@id/row2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button style="@style/Widget.DateChip" android:id="@+id/btnDay1"
            android:layout_width="56dp" android:layout_height="56dp"
            android:textSize="16sp" android:layout_margin="4dp"
            android:paddingHorizontal="0dp" android:text="1"/>
        <Button style="@style/Widget.DateChip" android:id="@+id/btnDay2"
            android:layout_width="56dp" android:layout_height="56dp"
            android:textSize="16sp" android:layout_margin="4dp"
            android:paddingHorizontal="0dp" android:text="2"/>
        <Button style="@style/Widget.DateChip" android:id="@+id/btnDay3"
            android:layout_width="56dp" android:layout_height="56dp"
            android:textSize="16sp" android:layout_margin="4dp"
            android:paddingHorizontal="0dp" android:text="3"/>
        <Button style="@style/Widget.DateChip" android:id="@+id/btnDay4"
            android:layout_width="56dp" android:layout_height="56dp"
            android:textSize="16sp" android:layout_margin="4dp"
            android:paddingHorizontal="0dp" android:text="4"/>
        <Button style="@style/Widget.DateChip" android:id="@+id/btnDay5"
            android:layout_width="56dp" android:layout_height="56dp"
            android:textSize="16sp" android:layout_margin="4dp"
            android:paddingHorizontal="0dp" android:text="5"/>
        <Button style="@style/Widget.DateChip" android:id="@+id/btnDay6"
            android:layout_width="56dp" android:layout_height="56dp"
            android:textSize="16sp" android:layout_margin="4dp"
            android:paddingHorizontal="0dp" android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/row1"
        app:layout_constraintBottom_toTopOf="@id/buttonNextDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            style="@style/Widget.DateChip"
            android:id="@+id/btnDay7"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:paddingHorizontal="0dp"
            android:textSize="16sp"
            android:text="7"/>

        <Button
            style="@style/Widget.DateChip"
            android:id="@+id/btnDay8"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:paddingHorizontal="0dp"
            android:textSize="16sp"
            android:text="8"/>

        <Button
            style="@style/Widget.DateChip"
            android:id="@+id/btnDay9"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:paddingHorizontal="0dp"
            android:textSize="16sp"
            android:text="9"/>

        <Button
            style="@style/Widget.DateChip"
            android:id="@+id/btnDay10"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:paddingHorizontal="0dp"
            android:textSize="16sp"
            android:text="10"/>

        <Button
            style="@style/Widget.DateChip"
            android:id="@+id/btnDay11"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:paddingHorizontal="0dp"
            android:textSize="16sp"
            android:text="11"/>

        <Button
            style="@style/Widget.DateChip"
            android:id="@+id/btnDay12"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:paddingHorizontal="0dp"
            android:textSize="16sp"
            android:text="12"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonNextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="@drawable/bg_primary_button"
        android:text="Next"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row2" />

</androidx.constraintlayout.widget.ConstraintLayout>