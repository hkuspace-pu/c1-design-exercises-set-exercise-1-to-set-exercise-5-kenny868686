<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="@string/select_date"
        android:textColor="@color/primaryText"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_button_shadow"
        android:text="@string/next"
        android:textAllCaps="true"
        android:textColor="@color/primaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridDates" />

    <GridLayout
        android:id="@+id/gridDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alignmentMode="alignMargins"
        android:columnCount="6"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectDate">

        <!-- 1-12 buttons -->
        <!-- reuse same style; actual selection由 Java 改 background -->
        <Button
            android:id="@+id/btnDate1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="3"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="4"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="5"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate6"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="6"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate7"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="7"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate8"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="8"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate9"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="9"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate10"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="10"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate11"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="11"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDate12"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/bg_date_unselected"
            android:text="12"
            android:textAllCaps="false" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>