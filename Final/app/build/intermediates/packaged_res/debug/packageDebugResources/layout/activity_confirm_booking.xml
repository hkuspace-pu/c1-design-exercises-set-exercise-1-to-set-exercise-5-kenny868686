<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirmRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/confirmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Confirm Booking"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/confirmList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmTitle">

        <TextView
            android:id="@+id/textConfirmDate"
            style="@style/Widget.InfoChip"
            android:text="Date: 12 Dec 2025" />

        <TextView
            android:id="@+id/textConfirmTime"
            style="@style/Widget.InfoChip"
            android:layout_marginTop="16dp"
            android:text="Time: 6:30PM" />


        <TextView
            android:id="@+id/textConfirmGuest"
            style="@style/Widget.InfoChip"
            android:layout_marginTop="16dp"
            android:text="Guest: 2" />

        <TextView
            android:id="@+id/textConfirmPhone"
            style="@style/Widget.InfoChip"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone: 12345678" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonConfirmBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_primary_button"
        android:text="Confirm"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmList" />

</androidx.constraintlayout.widget.ConstraintLayout>