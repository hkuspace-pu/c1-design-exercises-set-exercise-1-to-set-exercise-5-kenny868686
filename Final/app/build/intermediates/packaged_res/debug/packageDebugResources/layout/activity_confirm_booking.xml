<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvConfirmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_booking"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/secondaryText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.18"/>

    <LinearLayout
        android:id="@+id/layoutConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/tvConfirmDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Date: 12 Dec 2025"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tvConfirmTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Time: 6:00PM"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tvConfirmGuest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Guest: 1"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tvConfirmPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_pill_grey"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Phone:"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:background="@drawable/bg_button_shadow"
        android:textColor="@color/primaryText"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/layoutConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>