<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="gray">#FFEEEEEE</color>
    <color name="orange">#FFFFA726</color>
    <color name="purple_500">#FFFFFFFF</color>
    <color name="purple_700">#FFFFFFFF</color>
    <color name="teal_200">#FF03DAC5</color>
    <string name="app_name">RestaurantGo</string>
    <string name="enter_your_name">Enter your name</string>
    <string name="submit">Submit</string>
    <style name="Theme.restaurantgo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>
    <style name="Widget">
    </style>
    <style name="Widget.DateChip">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_chip_neutral</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.InfoChip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Widget.TimeChip">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_chip_neutral</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>