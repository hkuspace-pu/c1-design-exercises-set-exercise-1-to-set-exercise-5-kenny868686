<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="400px"/>

    <TextView
        android:id="@+id/textSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : 12"
        android:textSize="16sp"
        android:background="@drawable/bg_date_badge"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/timeTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200px"/>

    <LinearLayout
        android:id="@+id/timeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/timeTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="200px">

        <Button
            android:id="@+id/btnTime1"
            style="@style/Widget.TimeChip"
            android:text="6:00PM"/>

        <Button
            android:id="@+id/btnTime2"
            style="@style/Widget.TimeChip"
            android:text="6:30PM"/>

        <Button
            android:id="@+id/btnTime3"
            style="@style/Widget.TimeChip"
            android:text="7:00PM"/>

        <Button
            android:id="@+id/btnTime4"
            style="@style/Widget.TimeChip"
            android:text="7:30PM"/>

        <Button
            android:id="@+id/btnTime5"
            style="@style/Widget.TimeChip"
            android:text="8:30PM"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonNextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/bg_primary_button"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/timeList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>